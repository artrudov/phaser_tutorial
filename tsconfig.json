{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "ES2017",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "typeRoots": [ "./src/types", "./node_modules/@types", "./node_modules/phaser/types"],
    "types": [
      "Phaser"
    ],
    "paths": {
      "@app/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@const/*": ["src/const/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "*":  ["types/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
